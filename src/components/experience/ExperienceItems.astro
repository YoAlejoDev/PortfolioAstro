---
interface Props {
    date: string;
    title: string;
    company: string;
    description: string;
}

const { date, title, company, description } = Astro.props;
---

<div class="flex items-center">
    <div class="z-10 flex items-center justify-center w-6 h-6 rounded-full ring-0 ring-white sm:ring-8 shrink-0">
        <svg  xmlns="http://www.w3.org/2000/svg"  width="24"  height="24"  viewBox="0 0 24 24"  fill="#000"  stroke="currentColor"  stroke-width="2"  stroke-linecap="round"  stroke-linejoin="round"  class="icon icon-tabler icons-tabler-outline icon-tabler-crown p-0.5">
            <path stroke="none" d="M0 0h24v24H0z" fill="none"/>
            <path d="M12 6l4 6l5 -4l-2 10h-14l-2 -10l5 4z" />
        </svg>
    </div>
    <div class="hidden sm:flex w-full bg-gray-200 h-0.5 dark:bg-gray-700"></div>
</div>
<div class="mt-3 sm:pe-8">
    <h3 class="text-lg font-semibold text-white-900 dark:text-white">{title}</h3>
    <time class="block mb-2 text-sm font-normal leading-none text-blue-400 dark:text-blue-500">{date}</time>
    <p class="text-base font-normal text-gray-500 dark:text-gray-400">{company}</p>
    <p class="text-base font-normal text-gray-500 dark:text-gray-400">{description}</p>
</div>