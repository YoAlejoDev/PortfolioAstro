---
import Layout from '../layouts/Layout.astro';
import Badge from '../components/Badge.astro';
import Experience from '../components/Experience.astro';
import SectionContainer from '../components/SectionContainer.astro';
---

<Layout 
title="Portfolio Dev - Alejandro"
description="Portfolio de Alejandro, Fullstack Web Developer"

>
	<main>
		<SectionContainer class="py-44" id="top">
			<h1 class="text-white text-5xl font-bold flex justify-between flex-row gap-x-2 pb-10">
				Hey It's me Alejandro
				<a 
				href="www.linkedin.com/in/yoalejodev" 
				target="_blank" 
				rel="noopener" 
				class="flex justify-center items-center">
					<Badge>Aviable for hire</Badge>
				</a>
			</h1>
			<h2 class="text-2xl opacity-80 text-wrap">
				I'm a <span class="text-blue-400">fullstack web developer</span> , I'm passionate about creating amazing things for the web. I'm from <span class="text-yellow-400">Medellin, Colombia.</span> 
			</h2>

			<h3 class="text-xl text-wrap pt-5 pb-2">Tecnologies:</h3>
			<ul>
				<li>
					<a class="bg-yellow-100 text-yellow-800 text-sm font-medium me-2 px-2.5 py-0.5 rounded dark:bg-yellow-900 dark:text-yellow-300">
    					JavaScript
					</a>
					<a class="bg-purple-100 text-purple-800 text-sm font-medium me-2 px-2.5 py-0.5 rounded dark:bg-purple-900 dark:text-purple-300">
						C#
					</a>
					<a class="bg-blue-100 text-blue-800 text-sm font-medium me-2 px-2.5 py-0.5 rounded dark:bg-blue-900 dark:text-blue-300">
						React
					</a>
					<a class="bg-green-100 text-green-800 text-sm font-medium me-2 px-2.5 py-0.5 rounded dark:bg-green-900 dark:text-green-300">
    					Python
					</a>
					<a class="bg-indigo-100 text-indigo-800 text-sm font-medium me-2 px-2.5 py-0.5 rounded dark:bg-indigo-900 dark:text-indigo-300">
						C++
					</a>

				</li>
			</ul>
		</SectionContainer>
		<SectionContainer class="py-44 pb-22" id="experience">
			<h2 class="text-2xl text-white font-semibold mb-10">Experience</h2>
			<Experience />
		</SectionContainer>
		
	</main>
</Layout>

